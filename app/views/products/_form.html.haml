= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field.my-4
    = f.label :journey
    = f.select :journey_id, options_for_select(Journey.all.map{|s|[s.name, s.id]}), class: 'form-control form-control-lg'
  .field.my-4
    = f.label :product_type
    = f.select :product_type, ["Group Training","Coaching"], class: 'form-control form-control-lg'
  .field.my-4
    = f.label :name
    = f.text_field :name, class: 'form-control form-control-lg'
  .field.my-4
    = f.label :launch_days_offset
    = f.number_field :launch_days_offset, class: 'form-control form-control-lg'
  .field.my-4
    = f.label :event_days_offset
    = f.number_field :event_days_offset, class: 'form-control form-control-lg'
  .actions
    = f.submit 'Save'
