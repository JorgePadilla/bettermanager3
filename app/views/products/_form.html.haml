= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :journey
    = f.select :journey_id, options_for_select(Journey.all.map{|s|[s.name, s.id]})
  .field
    = f.label :product_type
    = f.select :product_type, ["Group Training","Coaching"]
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :launch_days_offset
    = f.number_field :launch_days_offset
  .field
    = f.label :event_days_offset
    = f.number_field :event_days_offset
  .actions
    = f.submit 'Save'
